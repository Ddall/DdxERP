{# OrehaERP - Allan - OrehaErpBundle:Dossier:transferer.html.twig #}
{% extends "::orehaTemplate.html.twig" %}
{%  block title %}{{parent()}} - Transferer le dossier{% endblock %}
{% block body%}
<div class="container-fluid">
    <div class="row-fluid ">
        <div class="span10">
            <div class="well">
                <legend>
                    Transferer le dossier {{ dossier.intitule|upper }}
                    <a href="{{ path('oreha_erp_dossier_voir', {'id': dossier.id}) }}" class="btn btn-small"><span class="icon-arrow-left"></span> Retour</a>
                </legend>
                    {#
                <div class="alert alert-info">
                    <span class="icon-info-sign"></span> Transférer un dossier permet de blablabla.
                </div>
#}
                <form method="post" class=" form form-horizontal" {{ form_enctype(formTransfert) }}>
                    <div class="row-fluid">
                        {% for row in formTransfert %}
                            {% if row.vars.name != '_token' %}
                            <div class="control-group">
                                <div class="control-label">
                                    {{ form_label(row) }}
                                    {{ form_errors(row) }}
                                </div>
                                <div class="controls">
                                    {{ form_widget(row) }}
                                </div>
                            </div>
                            {% else%}
                                {{ form_widget(row)}}
                            {% endif %}
                        {% endfor%}
                    </div>

                    <div class="row-fluid">
                        <div class="alert alert-info offset1 span7">
                            <div class="echeanceForm">
                                <legend>Nouvelle échéance:</legend>
                                {% for row in formEcheance %}
                                    {% if row.vars.name != '_token' %}
                                        <div class="control-group">
                                            <div class="control-label">
                                                {{ form_label(row) }} 
                                                {{ form_errors(row) }}
                                            </div>
                                            <div class="controls">
                                                {{ form_widget(row) }}
                                            </div>
                                        </div>
                                    {%else%}
                                        {{ form_widget(row) }}
                                    {%endif%}
                                {% endfor %}
                                
                            </div>
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="offset1">
                            <input type="submit" class="btn btn-primary" />
                            <a class="btn" href="{{ path('oreha_erp_dossier_voir', {'id': dossier.id}) }}">Annuler</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
{% endblock body%}
