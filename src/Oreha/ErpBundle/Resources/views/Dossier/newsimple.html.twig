{% extends "::orehaTemplate.html.twig" %}
{% block title %}{{ parent()}} - Nouveau dossier{% endblock %}
{% block body %}
<div class="container-fluid">
    <div class="row-fluid">
        <div  class="span12">
            <fieldset>
                <legend>
                    Cr√©er un dossier dossier
                    <a href="{{ path('oreha_erp_dossier') }}" class="btn"><span class="icon-arrow-left"></span> Retour</a>
                </legend>
                    <div class="well">
                        <h2>Dossier</h2>
                        <form method="post" class=" form form-horizontal" {{ form_enctype(formDossier) }}>
                            {% for row in formDossier %}
                                    {% if row.vars.name != '_token' %}
                                    <div class="control-group">
                                        <span class="control-label">{{ form_label(row) }}</span>
                                        <div class="controls">
                                            {{ form_widget(row) }}
                                        </div>
                                    </div>
                                    {% else %}
                                        {{ form_widget(row)}}
                                    {% endif %}
                            {% endfor%}
                                {{ form_rest(formDossier) }}
                        <input type="submit" class="btn btn-primary" />
                        <a class="btn" href="{{ path('oreha_erp_dossier') }}">Annuler</a>
                    </form>
            </fieldset>
        </div>
    </div>
</div>
{% endblock body %}