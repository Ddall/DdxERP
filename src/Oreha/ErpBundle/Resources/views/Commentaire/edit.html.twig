{# OrehaERP - Allan - Oreha:ErpBundle:Commentaire:edit.html.twig #}
{% extends "::orehaTemplate.html.twig" %}
{% block title %}{{ parent()}} - Editer un commentaire{% endblock %}
{% block body%}
<div class="container-fluid">
    <div class="row-fluid">
        <div  class="span10">
            <fieldset>
                <legend>
                    Editer un commentaire
                    <a class="btn btn-small" href="{{ path('oreha_erp_dossier_voir', {'id': dossier.id}) }}"><span class="icon-arrow-left"></span> Retour au dossier</a>
                    <a onclick="return confirm('Supprimer ce message?');" class="btn btn-small btn-warning" href="{{ path('oreha_erp_dossier_commentaire_supprimer', {'id': commentaire.id, 'idDossier': dossier.id}) }}"><span class="icon-remove"></span> Supprimer le commentaire</a>
                </legend>
                <div class="well">
                    <form method="post" {{ form_enctype(formCommentaire) }}>
                        {{ form_widget(formCommentaire) }}
                        <input type="submit" class="btn btn-primary" />
                        <a class="btn" href="{{ path('oreha_erp_dossier_voir', {'id': dossier.id}) }}">Annuler</a>
                    </form>
                </div>
            </fieldset>
        </div>
    </div>
</div>
{% endblock body %}