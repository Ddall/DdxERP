{# OrehaERP - Allan - OrehaErpBundle:Contact:list.html.twig #}
{% extends "::orehaTemplate.html.twig" %}
{%  block title %}{{parent()}} - Contacts{% endblock %}
{% block body%}
<div class="container-fluid">
    <div class="row-fluid">
        <div  class="span10">
            <fieldset>
                <legend>
                    Contacts
                    <a class="btn btn-success" href="{{ path('oreha_erp_contact_ajouter') }}" ><span class="icon-plus"></span> Nouveau</a>
                </legend>
                <table class="table table-condensed table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Prenom</th>
                            <th>Nom</th>
                            <th>Type</th>
                            <th>Derni√®re Modification</th>
                    </thead>
                    <tbody>
                        {% for contact in listeContacts %}
                            <tr class="islink" id="{{ path('oreha_erp_contact_voir', { 'id': contact.id}) }}" >
                                <td>{{ contact.prenom }}</td>
                                <td>{{ contact.nom }}</td>
                                <td>
                                    {% if contact.type == 'part' %}<span class="label label-success">Particulier</span>
                                    {% else %}<span class="label label-info">Professionnel</span> {{ contact.societe }}
                                    {% endif %}
                                </td>
                                <td>{{ contact.dateDerniereModif.date|date('d/m/y H:i') }}</td>
                                <td></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </fieldset>
        </div>
    </div>
</div>
{% endblock body %}