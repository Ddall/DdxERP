{% extends "::orehaAdminTemplate.html.twig" %}
{%  block title %}{{parent()}} Sources de prospects{% endblock %}
{% block body%}
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span11">
            <legend>
                Sources de prospects
                <a class="btn btn-small btn-success" href="{{ path('oreha_erp_source_ajouter') }}" ><span class="icon-plus"></span> Nouvelle source</a>
            </legend>
            <div class="alert alert-info">
                <p>
                    Une source doit etre active pour etre affectée à un dossier.<br>
                </p>
            </div>
            <div class="span8">
                <table class="table table-condensed table-hover table-striped">
                    <thead>
                        <th>Nom</th>
                        <th>Categorie</th>
                        <th>Date</th>
                        <th>Actif</th>
                        <th></th>
                    </thead>
                    <tbody>
                        {% for source in sources %}
                            <tr id="{{ path('oreha_erp_source_voir', { 'id': source.id }) }}" class="islink {%if source.desactive %} error{% endif %}">
                                <td>
                                    {{ source.nom }}
                                </td>
                                <td>{{ source.type|capitalize }}</td>
                                <td>{{ source.date is null ? null: source.date|date('d/m/y') }}</td>
                                <td>{% if source.desactive %}<span class="icon-remove"></span> Désactivé{% else %}<span class="icon-ok"></span> Oui{% endif %}</td>
                                <td><a class="btn btn-small btn-info" href="{{ path('oreha_erp_source_modifier', {'id': source.id}) }}"><span class="icon-edit"></span>Modifier</a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock body %}