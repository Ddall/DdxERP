{% extends "::orehaTemplate.html.twig" %}
{% block body%}
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span10">
            <fieldset>
                <legend>
                    Chantiers
                </legend>
                    <div class="pull-right">
                        <span id="chrono" class="toggleCol btn btn-info">#</span>
                        <span id="crea" class="toggleCol btn btn-info">Date creation</span>
                        <span id="modif" class="toggleCol btn btn-info">Date modification</span>
                    </div>
                <div class="row-fluid">
                    <table class="table table-condensed table-hover table-striped">
                        <thead>
                            <tr>
                                <th class="colchrono">#</th>
                                <th class="colintitule">Dossier</th>
                                <th class="coltype">Type</th>
                                <th class="colstatut">Statut</th>
                                <th class="colinfo">Debut de préparation</th>
                                <th class="colsuivi">Début de travaux</th>
                                <th class="colcrea">Suivi par</th>
                                <th class="colmodif">Dernière modification</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for chantier in listeChantiers %}
                                <tr>
                                    <td></td>
                                    <td>{{ chantier.client.libelle}}</td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                </div>
            </fieldset>
        </div>
    </div>
</div>
{% endblock body %}
{% block javascripts %}
{{ parent() }}
<script type="text/javascript">
    $( document ).ready(function() {
        $('.colchrono').hide();
        $('.coldatecrea').hide();
        
        $('.toggleCol').click(function(){
            $('.col'+$(this).attr('id')).toggle();
        });
    });
</script>
{% endblock javascripts %}