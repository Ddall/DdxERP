{% extends "::orehaTemplate.html.twig" %}
{% block title %}{{ parent()}} - Créer un chantier{% endblock %}
{% block body%}
<div class="container-fluid">
    <div class="row-fluid">
        <div  class="span10">
            <fieldset>
                <legend>
                    Client {{ client.dossier.intitule}} - Créer le chantier
                    <a class="btn" href="{{ path('oreha_erp_client_voir', {'id': client.id}) }}"><span class="icon-arrow-left"></span> Retour</a>
                </legend>
                <div class="well">
                    <form method="post" class="form form-horizontal" {{ form_enctype(formChantier) }}>
                        <div class="row-fluid">
                            {% for row in formChantier %}
                                {% if row.vars.name != '_token' %}
                                <div class="control-group">
                                    <div class="control-label">
                                        {{ form_label(row) }}
                                        {{ form_errors(row) }}
                                    </div>
                                    <div class="controls">
                                        {{ form_widget(row) }}
                                    </div>
                                </div>
                                {% else%}
                                    {{ form_widget(row)}}
                                {% endif %}
                            {% endfor%}
                        </div>
                            {#
                        <div class="row-fluid">
                            <div class="alert alert-notice">
                                {% for row in formIntervenant %}
                                    {% if row.vars.name != '_token' %}
                                    <div class="control-group">
                                        <div class="control-label">
                                            {{ form_label(row) }}
