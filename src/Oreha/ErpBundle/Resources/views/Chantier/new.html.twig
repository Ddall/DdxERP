                                        </div>
                                        <div class="controls">
                                            {{ form_widget(row) }}
                                        </div>
                                    </div>
                                    {% else%}
                                        {{ form_widget(row)}}
                                    {% endif %}
                                {% endfor%}
                            </div>
                        </div>
                            #}
                        <input type="submit" class="btn btn-primary" />
                        <a class="btn" href="{{ path('oreha_erp_client_voir', {'id': client.id}) }}">Annuler</a>
                    </form>
                </div>
            </fieldset>
        </div>
    </div>
</div>
{% endblock body %}