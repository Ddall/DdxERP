{# OrehaERP - Allan - OrehaErpBundle:Facture:voir.html.twig #}
{% extends "::orehaTemplate.html.twig" %}
{%  block title %}{{parent()}} - Voir Facture{% endblock %}
{% block body%}
<div class="container-fluid">
    <div class="row-fluid">
        <legend>
            Facture {{ facture.chronoFacture }}
            <a href="{{ path('oreha_erp_dossier_voir', {'id': facture.dossier.id}) }}" class="btn btn-small"><span class="icon-arrow-left"></span> Retour</a>
            <a href="{{ path('oreha_erp_dossier_facture_modifier', {'id': facture.id}) }}" class="btn btn-small btn-info"><span class="icon-edit"></span> Modifier</a>
        </legend>
        <div class="well">
            <div class="row-fluid">
                <strong>ChronoFacture : </strong>{{ facture.chronoFacture}}<br>
                <strong>Libellé : </strong>{{ facture.libelle}}<br>
                <strong>Date d'échéance : </strong> {{ facture.echeance|date(format_date)}}<br>
                <br>
                <blockquote>
                    <strong>Montant HT : </strong>{{ facture.montantHT }}<br>
                    <strong>Montant TVA Réduite : </strong>{{ facture.montantTVAReduite }}<br>
                    <strong>Montant TVA Normale: </strong> {{ facture.montantTVANormale }}<br>
                    <strong>Montant TTC : </strong>{{ facture.montantTTC }}<br>
                </blockquote>
            </div>
            <div class="row-fluid">
                <br>
                <blockquote>
                    Créé par {{ facture.createur.fullName }} le {{ facture.dateCreation.date|date('d/m/y H:i')}}<br>
                    Dernière modification par {{ facture.dernierModificateur.fullName }} le {{ facture.dateDerniereModif.date|date('d/m/y H:i')}}<br>  
                </blockquote>
            </div>
        </div>
    </div>
</div>
{% endblock body%}