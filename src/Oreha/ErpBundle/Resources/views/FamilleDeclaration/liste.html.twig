{% extends "::orehaAdminTemplate.html.twig" %}
{%  block title %}{{parent()}}Admin - Familles de déclaration{% endblock %}
{% block body%}
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span11">
            <legend>
                Familles de déclarations
                <a class="btn btn-small btn-success" href="{{ path('oreha_admin_famille_declaration_ajouter') }}" ><span class="icon-plus"></span> Nouvelle famille de déclaration </a>
            </legend>
            
            <div class="span8">
                <table class="table table-condensed table-hover table-striped">
                    <thead>
                        <th>Nom</th>
                        <th>Active</th>
                        <th>Date de création du modèle</th>
                    </thead>
                    <tbody>
                        {% for famille in listeFamillesDeclaration %}
                            <tr id="{{ path('oreha_admin_famille_declaration_voir', { 'id': famille.id }) }}" class="islink {{ famille.active ? '': 'error'}}">
                                <td>
                                    {{ famille.nom }}
                                </td>
                                <td>{{ famille.active ? 'Oui' : 'Non' }}</td>
                                <td>{{ famille.dateCreation|date(format_datetime) }} par {{ famille.createur.fullName|capitalize }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock body %}